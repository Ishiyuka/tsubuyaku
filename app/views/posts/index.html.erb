<h1>つぶやき一覧</h1>

<table>
  <tr>
    <th>つぶやき</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.content %></td>
    <td><%= link_to '投稿内容確認', post_path(post.id) %></td>
    <td><%= link_to "投稿を編集する", edit_post_path(post.id) , data: { confirm: '本当に編集しますか？' }%></td>
    <td><%= link_to '投稿を削除する', post_path(post.id), method: :delete ,data: { confirm: '本当に削除しますか？' }%></td>
  </tr>
<% end %>
</table>

<%= link_to '新しく呟く', new_post_path %>